<Window x:Class="MotorcycleShop.UI.Views.CartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Корзина" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Список товаров в корзине -->
        <DataGrid Grid.Row="0" 
                  ItemsSource="{Binding CartItems}" 
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Марка" Binding="{Binding Motorcycle.Brand}" Width="*"/>
                <DataGridTextColumn Header="Модель" Binding="{Binding Motorcycle.Model}" Width="*"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="80"/>
                <DataGridTextColumn Header="Цена за единицу" Binding="{Binding Motorcycle.Price, StringFormat={}{0:C}}" Width="100"/>
                <DataGridTextColumn Header="Общая цена" Binding="{Binding Price, StringFormat={}{0:C}}" Width="100"/>
                <DataGridTemplateColumn Header="Действия" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Удалить" 
                                    Command="{Binding DataContext.RemoveItemCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}"
                                    Width="60" Height="25"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Общая сумма -->
        <Border Grid.Row="1" Background="LightBlue" Padding="10" Margin="0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="{Binding TotalAmount, StringFormat='Общая сумма заказа: {0:C}'}" 
                           FontSize="16" 
                           FontWeight="Bold"/>
            </Grid>
        </Border>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Оформить заказ" 
                    Command="{Binding CheckoutCommand}" 
                    Width="120" 
                    Height="35" 
                    Margin="0,0,10,0"
                    Background="LightGreen"/>
            
            <Button Content="Удалить выделенное" 
                    Command="{Binding RemoveItemCommand}"
                    CommandParameter="{Binding ElementName=CartDataGrid, Path=SelectedItem}"
                    Width="120" 
                    Height="35" 
                    Margin="0,0,10,0"
                    Background="LightCoral"/>
            
            <Button Content="Продолжить покупки" 
                    Command="{Binding ContinueShoppingCommand}" 
                    Width="120" 
                    Height="35"
                    Background="LightGray"/>
        </StackPanel>
    </Grid>
</Window>