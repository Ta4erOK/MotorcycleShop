<Window x:Class="MotorcycleShop.UI.Views.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Оформление заказа" Height="600" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <GroupBox Header="Информация о покупателе" Margin="0,0,0,15">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="ФИО:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding CustomerName, UpdateSourceTrigger=PropertyChanged}" Margin="5" Height="25"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Email:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Margin="5" Height="25"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Телефон:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}" Margin="5" Height="25"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Адрес:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}" Margin="5" Height="25" TextWrapping="Wrap"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Комментарий:" FontWeight="SemiBold" VerticalAlignment="Top" Margin="0,8,0,0"/>
                        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Comment, UpdateSourceTrigger=PropertyChanged}" Margin="5" Height="60" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
                    </Grid>
                </GroupBox>

                <GroupBox Header="Информация о заказе" Margin="0,0,0,15">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Сумма заказа:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding OrderTotal, StringFormat={}{0:C}}" 
                                   FontWeight="Bold" FontSize="16" Foreground="Green" VerticalAlignment="Center"/>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Оплатить" 
                    Command="{Binding PayCommand}" 
                    Width="100" 
                    Height="35" 
                    Margin="0,0,10,0"
                    Background="LightGreen"/>
            
            <Button Content="Назад" 
                    Command="{Binding GoBackCommand}" 
                    Width="100" 
                    Height="35"
                    Background="LightGray"/>
        </StackPanel>
    </Grid>
</Window>