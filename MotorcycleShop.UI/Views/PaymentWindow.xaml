<Window x:Class="MotorcycleShop.UI.Views.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:MotorcycleShop.UI.Controls"
        Title="Оплата заказа" Height="500" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="{Binding OrderTotal, StringFormat='Сумма к оплате: {0:C}'}"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"
                   Foreground="Green"/>

        <StackPanel Grid.Row="1">
            <GroupBox Header="Информация о карте" Margin="0,0,0,15">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Номер карты:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBox x:Name="CardNumberTextBox" Grid.Row="0" Grid.Column="1"
                             Text="{Binding CardNumber, UpdateSourceTrigger=PropertyChanged}"
                             Margin="5"
                             Height="25"
                             MaxLength="19"
                             controls:PlaceholderHelper.Placeholder="XXXX XXXX XXXX XXXX"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Срок действия:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBox x:Name="ExpiryDateTextBox" Grid.Row="1" Grid.Column="1"
                             Text="{Binding ExpiryDate, UpdateSourceTrigger=PropertyChanged}"
                             Margin="5"
                             Height="25"
                             MaxLength="5"
                             controls:PlaceholderHelper.Placeholder="MM/YY"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="CVV:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="1"
                             Text="{Binding Cvv, UpdateSourceTrigger=PropertyChanged}"
                             Margin="5"
                             Height="25"
                             MaxLength="3"
                             controls:PlaceholderHelper.Placeholder="123"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Владелец карты:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="3" Grid.Column="1"
                             Text="{Binding CardHolderName, UpdateSourceTrigger=PropertyChanged}"
                             Margin="5"
                             Height="25"
                             controls:PlaceholderHelper.Placeholder="ИМЯ ФАМИЛИЯ"/>
                </Grid>
            </GroupBox>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Оплатить"
                    Command="{Binding PayCommand}"
                    Width="100"
                    Height="35"
                    Margin="0,0,10,0"
                    Background="LightGreen"/>

            <Button Content="Отмена"
                    Command="{Binding CancelCommand}"
                    Width="100"
                    Height="35"
                    Background="LightCoral"/>
        </StackPanel>
    </Grid>
</Window>